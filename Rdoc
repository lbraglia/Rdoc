#!/usr/bin/Rscript --vanilla --quiet

library(getopt)

spec <- matrix(c(
    #long            short   req(*)  type        
    'help' ,         'h',    1,      'character',
    'help-search' ,  'H',    1,      'character',
    'apropos',       'a',    1,      'character',
    'vignette',      'v',    1,      'character',
    'sos',           's',    1,      'character'
    ), byrow=TRUE, ncol=4)

## (*) required arg:
##     0 = no argument
##     1 = required argument
##     2 = optional argument

## Parse command line
opt <- getopt(spec)

## Display usage if needed (no params specified at cli)
usage <- function(specs){
    specs
    cat('Hello usage world\n')
}
if(1 == length(opt)){
    usage(spec)
    q(status = 1)
}

print(opt)
